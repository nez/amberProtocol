<form>
    <p>
        <label>Nombre de usuario</label>
        <input type="text" class="form-control" name="usuario" required placeholder="Por ejemplo: Luis, Mario, ...">
    </p>
    <div class="row">
        <div class="col-sm-6">
            <p>
                <label>Contraseña</label>
                <input type="password" class="form-control" name="contrasena" required>
            </p>
        </div>

        <div class="col-sm-6">
            <p>
                <label>Confirmar contraseña</label>
                <input type="password" class="form-control" name="confirmar_contrasena" required>
            </p>
        </div>
    </div>

    <div class="row">

        <div class="col-sm-6">
            <p>
                <label>E-mail</label>
                <input type="email" class="form-control" name="email">
            </p>
        </div>
        <div class="col-sm-6">
            <p>
                <label>Nombre(s)</label>
                <input type="text" class="form-control" name="nombres" required>
            </p>
        </div>
    </div>

    <div class="row">
        <div class="col-sm-6">
            <p>
                <label>Apellido paterno</label>
                <input type="text" class="form-control" name="apellido_paterno" required>
            </p>
        </div>
        <div class="col-sm-6">
            <p>
                <label>Apellido materno</label>
                <input type="text" class="form-control" name="apellido_materno" required>
            </p>
        </div>
    </div>


    <p>
        <label>RFC</label>
        <input type="text" class="form-control" name="rfc">
    </p>


    <p>
        <label>Calle</label>
        <input type="text" class="form-control" name="direccion_calle">
    </p>

    <div class="row">

        <div class="col-sm-6">
            <p>
                <label>Número interior</label>
                <input type="text" class="form-control" name="direccion_numero_int">
            </p>
        </div>
        <div class="col-sm-6">
            <p>
                <label>Número exterior</label>
                <input type="text" class="form-control" name="direccion_numero_ext">
            </p>
        </div>
    </div>


    <div class="row">

        <div class="col-sm-6">
            <p>
                <label>Colonia</label>
                <input type="text" class="form-control" name="direccion_colonia">
            </p>
        </div>

        <div class="col-sm-6">
            <p>
                <label>Localidad</label>
                <input type="text" class="form-control" name="direccion_localidad">
            </p>
        </div>

    </div>

    <div class="row">
        <div class="col-sm-6">
            <p>
                <label>Municipio</label>
                <input type="text" class="form-control" name="direccion_municipio">
            </p>
        </div>

        <div class="col-sm-6">
            <p>
                <label>Ciudad</label>
                <input type="text" class="form-control" name="direccion_ciudad">
            </p>
        </div>
    </div>

    <div class="row">
        <div class="col-sm-6">
            <p>
                <label>Estado</label>
                <input type="text" class="form-control" name="direccion_estado">
            </p>
        </div>

        <div class="col-sm-6">
            <p>
                <label>País</label>
                <input type="text" class="form-control" name="direccion_pais" value="México">
            </p>
        </div>
    </div>


    <p>
        <label>Dependencia</label>
        <select name = "id_dependencia" class="form-control" required>
            <%
            if (dependencias.length > 0 ){
            for (var i =0; i < dependencias.length; i++){
            %>
            <option value="<%= dependencias[i].id %>"> <%= dependencias[i].nombre %> </option>
            <%
            }
            }else {
            %>
            <option value="">Ninguna</option>
            <% }%>
        </select>
    </p>

    <div class="row">
        <div class="col-sm-4">
            <p>
                <label>Permiso alertas</label>
                <select class="form-control" name="permiso_alertas">
                    <option value="false">No</option>
                    <option value="true">Sí</option>
                </select>
            </p>
        </div>


        <div class="col-sm-4">
            <p>
                <label>Permiso administrador</label>
                <select class="form-control" name="permiso_administrador">
                    <option value="false">No</option>
                    <option value="true">Sí</option>
                </select>
            </p>
        </div>

        <div class="col-sm-4">
            <p>
                <label>Tablero</label>
                <select class="form-control" name="permiso_tablero">
                    <option value="false">No</option>
                    <option value="true">Sí</option>
                </select>
            </p>
        </div>
    </div>
</div>

    <p>
        <button class="btn btn-primary" type="submit">Registrar</button>
    </p>

</form>